@page "/"

@using Syncfusion.Blazor.Spinner 

@attribute [Authorize]

<AuthorizeView>
    <Authorized>
        Authorized
        <br />
        Name: @context.User.Identity.Name
        <br />
        General Admin: @context.User.IsInRole("GeneralAdmin")
        <br />
        Super Admin: @context.User.IsInRole("SuperAdmin")
        <br />
        General User: @context.User.IsInRole("GeneralUser")
    </Authorized>
    <Authorizing></Authorizing>
    <NotAuthorized>Not Authorized</NotAuthorized>
</AuthorizeView>


